@model KjosAssignment5.Models.SongGenreViewModel
@{
    ViewData["Title"] = "Cart";
}

<h1 class="display-4">Shopping Cart</h1>
<form asp-controller="Songs" asp-action="Remove" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Songs![0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs![0].ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs![0].Artist)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs![0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Songs![0].Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Songs!)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="CartRemoveList" value="@item.Id" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Artist)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }
            <tr>
                <input type="submit" value="Remove From Cart" />
            </tr>
        </tbody>
    </table>
</form>
<p>
    @{
        decimal counter = 0;
        foreach (var item in Model.Songs!)
        {
            counter += item.Price;
        }
    }
    Total Price: @counter
</p>
<p>
    <button>Complete Payment!</button>
</p>